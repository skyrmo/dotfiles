{
    "session": {
        "trust_all_worktrees": true,
    },
    "theme": "One Dark",
    "disable_ai": false,
    "ui_font_weight": 400.0,
    "audio": {
        "experimental.legacy_audio_compatible": false,
        "experimental.denoise": false,
        "experimental.auto_speaker_volume": false,
    },
    "active_pane_modifiers": {
        "border_size": 0.0,
    },
    "centered_layout": {},
    "tabs": {
        "file_icons": true,
        "git_status": false,
    },
    "tab_bar": {
        "show": true,
    },
    "title_bar": {
        "show_menus": false,
        "show_sign_in": true,
        "show_user_picture": true,
        "show_onboarding_banner": false,
        "show_project_items": true,
        "show_branch_name": true,
        "show_branch_icon": false,
    },
    "search": {
        "button": true,
    },
    "status_bar": {
        "cursor_position_button": false,
        "active_language_button": true,
    },
    "relative_line_numbers": "disabled",
    "gutter": {
        "min_line_number_digits": 4,
        "breakpoints": true,
        "line_numbers": true,
    },
    "current_line_highlight": "all",
    "selection_highlight": true,
    "rounded_selection": false,
    "cursor_shape": "bar",
    "agent_buffer_font_size": 14.0,
    "buffer_font_weight": 350.0,
    "outline_panel": {
        "expand_outlines_with_depth": 100,
        "button": true,
        "default_width": 359.0,
        "dock": "right",
        "file_icons": true,
        "folder_icons": true,
        "git_status": true,
        "indent_size": 18.0,
        "auto_reveal_entries": true,
        "auto_fold_dirs": true,
        "indent_guides": {
            "show": "always",
        },
        "scrollbar": {
            "show": "never",
        },
    },

    "project_panel": {
        "indent_size": 18.0,
        "hide_gitignore": false,
        "button": true,
        "default_width": 240,
        "dock": "left",
        "entry_spacing": "comfortable",
        "file_icons": true,
        "folder_icons": true,
        "git_status": true,
        "auto_reveal_entries": true,
        "auto_fold_dirs": true,
        "scrollbar": {
            "show": null,
        },
        "sticky_scroll": true,
        "show_diagnostics": "all",
        "indent_guides": {
            "show": "always",
        },
        "hide_root": false,
        "starts_open": true,
    },

    "bottom_dock_layout": "contained", // "left_aligned" if need more space on left.

    "debugger": {
        "dock": "right",
    },

    "auto_install_extensions": {
        "html": true,
        "wgsl": true,
        "vue": true,
    },

    "edit_predictions": {
        "mode": "subtle",
        "enabled_in_text_threads": false,
    },

    "features": {
        "edit_prediction_provider": "zed",
    },

    "agent": {
        "dock": "right",
        "default_model": {
            "provider": "zed.dev",
            "model": "claude-sonnet-4-5",
        },
        "default_profile": "ask",
        "model_parameters": [],
    },

    "collaboration_panel": {
        "button": false,
    },

    "notification_panel": {
        "button": false,
    },

    "telemetry": {
        "diagnostics": false,
        "metrics": false,
    },

    "ui_font_size": 15.0,
    "ui_font_family": "iA Writer Duo V",

    "preferred_line_length": 88,
    "format_on_save": "on",
    "tab_size": 4,

    "buffer_font_size": 16.0,
    "buffer_font_family": "JetBrains Mono",
    "buffer_font_features": {
        "liga": true,
    },
    "buffer_line_height": {
        "custom": 1.4,
    },
    // "buffer_line_height": "standard",
    // "buffer_line_height": "comfortable",
    "show_whitespaces": "selection",
    "agent_ui_font_size": 16.0,
    "terminal": {
        "toolbar": {
            "breadcrumbs": false,
        },
        "button": true,
        "font_size": 14,
        "dock": "right",
        "working_directory": "current_project_directory",
    },

    "git": {
        "branch_picker": {
            "show_author_name": true,
        },
        "blame": {
            "show_avatar": false,
        },
        "inline_blame": {
            "enabled": false,
        },
        "git_gutter": "tracked_files",
    },

    "inlay_hints": {
        "enabled": false,
    },

    "lsp": {
        "rust-analyzer": {
            "initialization_options": {
                "inlayHints": {
                    "maxLength": null,
                    "lifetimeElisionHints": {
                        "useParameterNames": true,
                        "enable": "skip_trivial",
                    },
                    "closureReturnTypeHints": {
                        "enable": "always",
                    },
                },
            },
        },
    },

    // Scrollbar related settings
    "scrollbar": {
        // When to show the scrollbar in the editor.
        // This setting can take four values:
        //
        // 1. Show the scrollbar if there's important information or
        //    follow the system's configured behavior (default):
        //   "auto"
        // 2. Match the system's configured behavior:
        //    "system"
        // 3. Always show the scrollbar:
        //    "always"
        // 4. Never show the scrollbar:
        //    "never"
        "show": "auto",
        // Whether to show cursor positions in the scrollbar.
        "cursors": true,
        // Whether to show git diff indicators in the scrollbar.
        "git_diff": false,
        // Whether to show buffer search results in the scrollbar.
        "search_results": false,
        // Whether to show selected symbol occurrences in the scrollbar.
        "selected_symbol": true,
        // Which diagnostic indicators to show in the scrollbar:
        //  - "none" or false: do not show diagnostics
        //  - "error": show only errors
        //  - "warning": show only errors and warnings
        //  - "information": show only errors, warnings, and information
        //  - "all" or true: show all diagnostics
        "diagnostics": "none",
        /// Forcefully enable or disable the scrollbar for each axis
        "axes": {
            /// When false, forcefully disables the horizontal scrollbar. Otherwise, obey other settings.
            "horizontal": true,
            /// When false, forcefully disables the vertical scrollbar. Otherwise, obey other settings.
            "vertical": true,
        },
    },

    "toolbar": {
        "breadcrumbs": true,
        "quick_actions": true,
        "selections_menu": false,
        "agent_review": true,
        "code_actions": false,
    },

    "diagnostics": {
        "include_warnings": true,
        "inline": {
            "enabled": true,
            "max_severity": "off",
        },
    },

    "theme_overrides": {
        "One Dark": {
            "hint": "#334D4Cff",
            "syntax": {
                "comment": {
                    "color": "#3E4552ff",
                    "font_style": "italic",
                },

                "string": {
                    "color": "#F1DEB9ff",
                },
                "variable": {
                    "color": "#E2E0DA",
                    // "font_weight": 300,
                },
                "function": {
                    // "color": "#FF0000FF",
                    // "font_style": "italic",
                    // "font_weight": 500,
                },
            },
        },

        "Zed Legacy: Ros√© Pine Moon": {
            "syntax": {
                "comment": {
                    "color": "#44485F",
                },

                "string": {
                    "color": "#DFDCB1",
                },

                "type": {
                    "color": "#33A39E",
                },

                "hint": {
                    "color": "#3d5566",
                },
            },
        },
        "Tailwind Syntax": {
            "syntax": {
                "comment": {
                    "color": "#44485F",
                },

                // "keyword": {
                //     "color": "#ABd2f8",
                // },

                "string": {
                    "color": "#DFDCB1",
                },

                "type": {
                    "color": "#33A39E",
                },

                "function": {
                    "color": "#ff1111FF",
                },
                // "hint": {
                //     "color": "#3d5566",
                // },
            },
        },
    },
}
