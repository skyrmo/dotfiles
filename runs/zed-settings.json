{
    "outline_panel": {
        "button": true,
        "default_width": 300,
        "dock": "left",
        "file_icons": true,
        "folder_icons": true,
        "git_status": true,
        "indent_size": 20,
        "auto_reveal_entries": true,
        "auto_fold_dirs": true,
        "indent_guides": {
            "show": "always"
        },
        "scrollbar": {
            "show": "never"
        }
    },

    "project_panel": {
        "button": true,
        "default_width": 240,
        "dock": "left",
        "entry_spacing": "comfortable",
        "file_icons": true,
        "folder_icons": true,
        "git_status": true,
        "indent_size": 20,
        "auto_reveal_entries": true,
        "auto_fold_dirs": true,
        "scrollbar": {
            "show": null
        },
        "sticky_scroll": true,
        "show_diagnostics": "all",
        "indent_guides": {
            "show": "always"
        },
        "hide_root": false,
        "starts_open": true
    },

    "bottom_dock_layout": "contained", // "left_aligned" if need more space on left.

    "debugger": {
        "dock": "bottom"
    },

    "auto_install_extensions": {
        "html": true,
        "wgsl": true,
        "vue": true
    },

    "edit_predictions": {
        "mode": "subtle",
        "enabled_in_text_threads": false
    },

    "features": {
        "edit_prediction_provider": "zed"
    },

    "agent": {
        "default_profile": "write",
        "play_sound_when_agent_done": false,
        "default_model": {
            "provider": "zed.dev",
            "model": "claude-sonnet-4"
        },
        "dock": "right"
    },

    "collaboration_panel": {
        "button": false
    },

    "notification_panel": {
        "button": false
    },

    "theme": {
        "mode": "dark",
        "dark": "One Dark",
        "light": "One Light"
    },

    "telemetry": {
        "diagnostics": false,
        "metrics": false
    },

    "ui_font_size": 16,
    "ui_font_family": "iA Writer Duo V",

    "preferred_line_length": 100,
    "format_on_save": "on",
    "tab_size": 4,

    "buffer_font_size": 17,
    "buffer_font_family": "JetBrains Mono",
    "buffer_font_features": {
        "liga": true
    },
    "buffer_line_height": {
        "custom": 1.4
    },
    // "buffer_line_height": "standard",
    // "buffer_line_height": "comfortable",
    "show_whitespaces": "selection",
    "agent_font_size": 16,
    "terminal": {
        "font_size": 14,
        "dock": "bottom",
        "working_directory": "current_project_directory"
    },

    "git": {
        "inline_blame": {
            "enabled": false
        },
        "git_gutter": "tracked_files"
    },

    "inlay_hints": {
        "enabled": false
    },

    "lsp": {
        "rust-analyzer": {
            "initialization_options": {
                "inlayHints": {
                    "maxLength": null,
                    "lifetimeElisionHints": {
                        "useParameterNames": true,
                        "enable": "skip_trivial"
                    },
                    "closureReturnTypeHints": {
                        "enable": "always"
                    }
                }
            }
        }
    },

    // Scrollbar related settings
    "scrollbar": {
        // When to show the scrollbar in the editor.
        // This setting can take four values:
        //
        // 1. Show the scrollbar if there's important information or
        //    follow the system's configured behavior (default):
        //   "auto"
        // 2. Match the system's configured behavior:
        //    "system"
        // 3. Always show the scrollbar:
        //    "always"
        // 4. Never show the scrollbar:
        //    "never"
        "show": "auto",
        // Whether to show cursor positions in the scrollbar.
        "cursors": true,
        // Whether to show git diff indicators in the scrollbar.
        "git_diff": false,
        // Whether to show buffer search results in the scrollbar.
        "search_results": false,
        // Whether to show selected symbol occurrences in the scrollbar.
        "selected_symbol": true,
        // Which diagnostic indicators to show in the scrollbar:
        //  - "none" or false: do not show diagnostics
        //  - "error": show only errors
        //  - "warning": show only errors and warnings
        //  - "information": show only errors, warnings, and information
        //  - "all" or true: show all diagnostics
        "diagnostics": "none",
        /// Forcefully enable or disable the scrollbar for each axis
        "axes": {
            /// When false, forcefully disables the horizontal scrollbar. Otherwise, obey other settings.
            "horizontal": true,
            /// When false, forcefully disables the vertical scrollbar. Otherwise, obey other settings.
            "vertical": true
        }
    },

    "toolbar": {
        "breadcrumbs": true,
        "quick_actions": true,
        "selections_menu": true,
        "agent_review": true,
        "code_actions": false
    },

    "diagnostics": {
        "include_warnings": true,
        "inline": {
            "enabled": true,
            "max_severity": "off"
        }
    },

    "theme_overrides": {
        "One Dark": {
            "hint": "#334D4Cff",
            "syntax": {
                "comment": {
                    "color": "#3E4552ff"
                },
                "string": {
                    "color": "#F1DEB9ff"
                },
                "variable": {
                    "color": "#E2E0DA"
                }
                // "punctuation": {
                //     "color": "#CAD0DBff"
                // },
                // "operator": {
                //     "color": "#CAD0DBff"
                // }
            }
        }
    }
}
